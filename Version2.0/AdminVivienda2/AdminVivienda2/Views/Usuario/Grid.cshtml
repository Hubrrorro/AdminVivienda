
@model List<AdminVivienda2.DAL.Tbl_Usuarios>
@{
    WebGrid grid = new WebGrid(Model);
}
@grid.GetHtml(
            tableStyle: "table table-hover table-responsive",
            alternatingRowStyle: "table-dark",
            mode: WebGridPagerModes.All,
            firstText: "<< Primero",
            previousText: "< Anterior",
            nextText: "Siguiente >",
            lastText: "Último >>", //add next or prev link in webgrid
            columns: grid.Columns(
                grid.Column("Usuario", canSort: true),
                grid.Column("Correo", canSort: true),
                grid.Column(header:"Nombre", canSort: true, style: "", format: (item) => new HtmlString(
                    item.Nombre + " " + item.ApPaterno + " " + item.ApMaterno)),
                 grid.Column(header: "Estatus", canSort: false, style: "", format: (item) => new HtmlString(
                       "<i class='material-icons'>" + (item.Activo ? "check_box" : "check_box_outline_blank") + "</i>")),
                grid.Column(header: "Editar", canSort: false, style: "", format: (item) => new HtmlString(
                       "<a href=" + @Url.Action("Details", new { id = item.Id_Condominio }) + "   class='btn-floating waves-effect waves-light btnComponent' ><i class='material-icons left'>brush</i></a> "))
                            )
                        )  