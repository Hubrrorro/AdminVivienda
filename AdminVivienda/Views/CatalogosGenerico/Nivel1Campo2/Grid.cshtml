@model AdminVivienda.Models.Catalogos.General.Nivel1Campo2RecursosModel
@{
    WebGrid grid = new WebGrid(Model.datos);
}
@grid.GetHtml(
            tableStyle: "table table-hover table-responsive",
            alternatingRowStyle: "table-dark",
            mode: WebGridPagerModes.All,
            firstText: "<< Primero",
            previousText: "< Anterior",
            nextText: "Siguiente >",
            lastText: "Último >>", //add next or prev link in webgrid
            columns: grid.Columns(
                grid.Column("descripcion", Model.campo1, canSort: true),
                grid.Column("campo2", Model.campo2, canSort: true),
                 grid.Column(header: Model.estatus, canSort: false, style: "", format: (item) => new HtmlString(
                       "<i class='material-icons'>" + (item.activo==1 ? "check_box" : "check_box_outline_blank") + "</i>")),
                grid.Column(header: "Editar", canSort: false, style: "", format: (item) => new HtmlString(
                       "<a href=" + @Url.Action("Details", new { id = item.id }) + "  title='Editar' class='btn-floating waves-effect waves-light ' ><i class='material-icons left'>brush</i></a> "))
                            )
                        )
