
@{
    ViewBag.Title = "Búsqueda de condominios";
}

<div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6">
        <div class="form-group">
            <label for="txtcondominio">Buscar condominio:</label>
            <input type="text" class="form-control" id="txtcondominio">
        </div>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4">
        <div class="form-group">
            <label for="ddlActivo">Estatus:</label>
            <select id="ddlActivo" class="custom-select">
                <option selected="" value="-1">Todos</option>
                <option value="1">Activo</option>
                <option value="0">Inactivo</option>
            </select>
        </div>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2">
        <button type="button" class="btn btn-info">Buscar</button>
        <a href="@Url.Action("Create")" class="btn btn-success">Agregar</a>
    </div>
</div>
<hr />
<div id="divTableCondominio">

</div>
@section scripts{
    <script>
        var _urlGrid = '@Url.Action("Grid")';
        $(document).ready(function () {
            EjecutaAjaxBusqueda();
        });
        $(".btn-info").click(function () {
            EjecutaAjaxBusqueda();
        });
        function EjecutaAjaxBusqueda() {
            var modelo = new Object();
            modelo.Condominio = $('#txtcondominio').val();
            modelo.Activo = $('#ddlActivo').val();
            FncExeAjax(_urlGrid, modelo, "POST", false, FncGrid);
        }
        function FncGrid(datos) {
            $('#divTableCondominio').html(datos);
        }
    </script>
}