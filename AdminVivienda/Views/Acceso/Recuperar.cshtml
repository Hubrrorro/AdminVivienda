
@{
    ViewBag.Title = "Recuperar contraseña";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="row">
    <center>
        Recuperar contraseña.
    </center>
</div>
<div class="row">
    <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input id="txtusuario" type="text" class="validate">
        <label for="txtusuario">Usuario:</label>
    </div>
    <div class="input-field col s12">
        <i class="material-icons prefix">date_range</i>
        <input id="txtpass" type="text" class="validate">
        <label for="txtpass">Fecha nacimiento:</label>
    </div>
</div>
<hr />
<div class="row">
    <div class="col s6 center">
        <a href="@Url.Action("index")">Regresar al login</a>
    </div>
    <div class="col s6 center">
        <button class="waves-effect waves-light btn"><i class="material-icons left">lock_open</i>Recuperar</button>
    </div>
</div>